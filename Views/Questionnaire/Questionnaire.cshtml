@model Library.Models.Questionnaire

@{
    ViewBag.Title = "Questionnaire";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Questionnaire</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Questionnaire</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.QuestText)

    <div class="form-group col-md-12">
        @Html.DisplayFor(model => model.QuestText)
    </div>

    <div class="form-group">
        <div class="col-md-12">
            @Html.EditorFor(model => model.Answers, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Answers, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-12">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}